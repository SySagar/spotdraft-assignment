generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String                 @id @default(cuid())
  name         String
  email        String                 @unique
  passwordHash String
  createdAt    DateTime               @default(now())
  pdfs         Pdf[]                  @relation("OwnerPdfs")
  comments     Comment[]
  // sharedLinks  SharedLink[]
  invitedPdfs  PdfGroupAccessInvite[]
}

model Pdf {
  id           String                 @id @default(cuid())
  title        String
  fileUrl      String
  ownerId      String
  createdAt    DateTime               @default(now())
  owner        User                   @relation("OwnerPdfs", fields: [ownerId], references: [id])
  comments     Comment[]
  sharedLinks  SharedLink[]
  invitedUsers PdfGroupAccessInvite[]
}

model SharedLink {
  id        String   @id @default(cuid())
  pdfId     String
  token     String   @unique
  email     String?
  createdAt DateTime @default(now())
  pdf       Pdf      @relation(fields: [pdfId], references: [id])
}

model Comment {
  id           String   @id @default(cuid())
  content      Json
  authorId     String?
  sharedLinkId String?
  pdfId        String
  createdAt    DateTime @default(now())
  pdf          Pdf      @relation(fields: [pdfId], references: [id])
  author       User?    @relation(fields: [authorId], references: [id])
}

model PdfGroupAccessInvite {
  id        String   @id @default(cuid())
  pdfId     String
  invitedId String // user who is invited
  createdAt DateTime @default(now())
  pdf       Pdf      @relation(fields: [pdfId], references: [id])
  invited   User     @relation(fields: [invitedId], references: [id])
}
